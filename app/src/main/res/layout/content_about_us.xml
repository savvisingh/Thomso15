<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_about_us"
    tools:context="com.savvisingh.thomso15.activities.AboutUs">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        card_view:cardCornerRadius="4dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#424242"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_16dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sarabjeet Singh"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_24sp"
                android:paddingLeft="@dimen/margin_48dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_4dp"

                />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/margin_48dp"
               android:orientation="horizontal"
               android:paddingTop="@dimen/margin_4dp"
               android:paddingBottom="@dimen/margin_4dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Android "
                   android:textColor="@color/colorSecondryText"
                   android:textSize="@dimen/font_18sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Developer"
                   android:textSize="@dimen/font_18sp"
                   android:textColor="@color/colorAccent"
                   android:layout_gravity="start"
                   />

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_72dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_12dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/github10"
                    android:id="@+id/github_savvi"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/ic_message"
                    android:id="@+id/facebook_savvi"

                    />
            </LinearLayout>
      </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        card_view:cardCornerRadius="4dp"
        android:layout_below="@id/card_view"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#424242"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_16dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ruchil Kothari"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_24sp"
                android:paddingLeft="@dimen/margin_48dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_4dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_48dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_4dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interface,UI/UX "
                    android:textColor="@color/colorSecondryText"
                    android:textSize="@dimen/font_18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textSize="@dimen/font_18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="start"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_72dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_12dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/behance6"
                    android:id="@+id/behance_ruchil"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/ic_message"
                    android:id="@+id/facebook_ruchil"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
